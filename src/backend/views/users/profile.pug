extends ../base.pug

block content
    .profile-body
        .profile-container
            .outer-first-column
                .first-column
                    .wrapper
                        span #{user.pnp != "no" ? "pnp member!" : "normal member!"}
                    img(src=user.image_url)
                    .wrapper(data-githuburl=user.github_url)
            .outer-second-column
                .second-column
                    header
                        span #{user.nickname}
                    main 
                        p Introduce yourself!
                    footer 
                        span &rarr;
            .hidden-column
                .more-information
                    header 
                        span My Info
                    .first-row
                        span 상태: 
                            strong #{user.absence}
                        span(data-department=user.department) 학과: 
                        span(data-interest=user.interest) 관심 분야: 
                    .second-row
                        .like
                            span like
                            i.fas.fa-thumbs-up
                            span #{user.like}
                        .visit
                            span visit
                            i.fas.fa-home
                            span #{user.visit}
                        //- span 찜: #{user.choice.length == 0 ? "" : user.choice}
                
        .options
            a(href=`/users/${user.id}/update`) 프로필 수정하기
            if localLogin 
                a(href=`/users/${user.id}/password`) 비밀번호 변경하기
    script(src="/assets/js/profile.js") 