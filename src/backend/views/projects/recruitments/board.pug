extends ../../base.pug
include ../mixins/recruitmentBoardForm.pug

block content 
    .recruitmentBoard-container 
        .header
            h1.title 멤버 구하기 게시판
            a(href="/projects/recruitments/enrollment").write 글쓰기
        .main
            each element in articleLists 
                +post(element)          
        .pagination(data-numberofarticles = numberOfArticles, data-articlesperpage = articlesPerPage,
         data-currentpage = currentPage, data-shownbuttons = shownButtons, data-category = `projects/${category}`, 
         data-findterm = findTerm)
            button.prev Prev
            .numbers 
            button.next Next
        form(action="/projects/recruitments/search/1" method="POST").search
            input(type="text" name="searchTerm" placeholder="Search...").searchBox
            button(type="submit").searchButton
                i.fas.fa-search
    script(src="/assets/js/pagination.js")