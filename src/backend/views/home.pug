extends ./base.pug

block content 
    .homeButtons
        a(href="/projects").projectsButton
            button projects
        a(href="/communities/1").communitiesButton
            button communities
        a(href="/users/join").joinButton
            button join
            
        if !authenticated
            a(href="/users/login").loginButton
                button login
            a(href="/api/naver/login").naverLoginButton
                button naver login
            a(href="/api/google/login").googleLoginButton
                button google login
        else
            a(href="/users/logout").logoutButton
                button logout
            a(href=`/users/${loggedInUser._id}`).profileButton
                button profile
            a(href=`/users/${loggedInUser._id}/delete`).userDeleteButton
                button user-delete