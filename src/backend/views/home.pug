extends ./base.pug

block content 
    .homeButtons
        a(href="/categories/recruitments/1").projectsButton
            button recruitments
        a(href="/categories/communities/1").communitiesButton
            button communities
        a(href="/users/join").joinButton
            button join
            
        if !authenticated
            a(href="/users/login").loginButton
                button login
        else
            a(href="/users/logout").logoutButton
                button logout
            a(href=`/users/${loggedInUser._id}`).profileButton
                button profile
            a(href=`/users/delete`).userDeleteButton
                button user-delete